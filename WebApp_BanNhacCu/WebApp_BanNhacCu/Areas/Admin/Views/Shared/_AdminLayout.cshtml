<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Trang Chủ Quản Lý</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex">
        <div class="d-flex flex-column flex-shrink-0 p-3 bg-dark vh-100" style="width: 250px">
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                <img class="w-100" src="~/images/logo.png" alt="Zyuuki Music Store Logo" />
            </a>
            <div class="mt-3 mb-2">
                <p class="text-white-50 fst-italic fs-4">Quản Lý Hệ Thống</p>
            </div>
            <h6 class="text-secondary text-uppercase fw-semibold">Danh mục</h6>

            <ul class="nav nav-pills flex-column mb-auto mt-2">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="Admin" asp-controller="SanPham" asp-action="Index">
                        <i class="mdi mdi-cube-outline me-2"></i>Sản Phẩm
                    </a>
                </li>
                <li>
                    <a class="nav-link text-white" asp-area="Admin" asp-controller="NSX" asp-action="Index">
                        <i class="mdi mdi-factory me-2"></i>Nhà Sản Xuất
                    </a>
                </li>
                <li>
                    <a class="nav-link text-white" asp-area="Admin" asp-controller="Loai" asp-action="Index">
                        <i class="mdi mdi-tag-outline me-2"></i>Loại
                    </a>
                </li>
                <li>
                    <a class="nav-link text-white" asp-area="Admin" asp-controller="TaiKhoan" asp-action="Index">
						<i class="mdi mdi-tag-outline me-2"></i>Tài Khoản
                    </a>
                </li>
                <li>
                    <a class="nav-link text-white" asp-area="Admin" asp-controller="NhanVien" asp-action="Index">
                        <i class="mdi mdi-tag-outline me-2"></i>Nhân Viên 
                    </a>
                </li>
                <li>
                    <a class="nav-link text-white" asp-area="Admin" asp-controller="DonDatHang" asp-action="Index">
                        <i class="mdi mdi-tag-outline me-2"></i>Đơn Hàng 
                    </a>
                </li>
                <li>
                    <a class="nav-link text-white" asp-area="Admin" asp-controller="ThongKe" asp-action="Index">
                        <i class="mdi mdi-tag-outline me-2"></i>Thống kê
                    </a>
                </li> 
                <li>
                    <a class="nav-link text-white" asp-area="Admin" asp-controller="GiaoHang" asp-action="Index">
						<i class="mdi mdi-tag-outline me-2"></i>Giao Hàng
                    </a>
                </li>
            </ul>
        </div>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
</body>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</html>

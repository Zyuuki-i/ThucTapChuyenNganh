@model WebApp_BanNhacCu.Areas.Admin.MyModels.CDonDatHang
@{
    ViewData["Title"] = "XacNhanDDH";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    List<NhanVien>? shippers = ViewBag.NV as List<NhanVien>;
}

<h1 class="m-3 text-center">Xác Nhận Đơn Hàng</h1>
<br />
<div class="row justify-content-evenly">
    <div class="col-sm-5 row border-1 rounded-1 shadow bg-light p-3">
        @if (Model.Trangthai == "Đã hủy")
        {
            <div class="col-sm-1 bg-danger"></div>
        }
        else if (Model.Trangthai == "Hoàn thành")
        {
            <div class="col-sm-1 bg-success"></div>
        }
        else if (Model.Trangthai == "Chưa xác nhận")
        {
            <div class="col-sm-1 bg-warning"></div>
        }
        else
        {
            <div class="col-sm-1 bg-secondary"></div>
        }
        <div class="col-sm-11">
            <dl class="row mb-0 align-items-center">
                <dt class="col-sm-4 mb-2">
                    @Html.DisplayNameFor(model => model.MaDdh)
                </dt>
                <dd class="col-sm-8 mb-2">
                    @Html.DisplayFor(model => model.MaDdh)
                </dd>
                <dt class="col-sm-4 mb-2">
                    @Html.DisplayNameFor(model => model.Nguoinhan)
                </dt>
                <dd class="col-sm-8 mb-2">
                    @Html.DisplayFor(model => model.Nguoinhan)
                </dd>
                <dt class="col-sm-4 mb-2">
                    @Html.DisplayNameFor(model => model.Sdt)
                </dt>
                <dd class="col-sm-8 mb-2">
                    @Html.DisplayFor(model => model.Sdt)
                </dd>
                <dt class="col-sm-4 mb-2">
                    @Html.DisplayNameFor(model => model.Diachi)
                </dt>
                <dd class="col-sm-8 mb-2">
                    @Html.DisplayFor(model => model.Diachi)
                </dd>
                <dt class="col-sm-4 mb-2">
                    @Html.DisplayNameFor(model => model.Ngaydat)
                </dt>
                <dd class="col-sm-8 mb-2">
                    @if (Model.Ngaydat.HasValue)
                    {
                        @Model.Ngaydat.Value.ToShortDateString()
                    }
                    else
                    {
                        <span class="text-muted">N/A</span>
                    }
                </dd>
                <dt class="col-sm-4 mb-2">
                    @Html.DisplayNameFor(model => model.Tongtien)
                </dt>
                <dd class="col-sm-8 mb-2">
                    @String.Format("{0:N0} VND", Model.Tongtien)
                </dd>
                <dt class="col-sm-4 mb-2">
                    @Html.DisplayNameFor(model => model.Phuongthuc)
                </dt>
                <dt class="col-sm-8 mb-2">
                    @Html.DisplayFor(model => model.Phuongthuc)
                </dt>
                <dt class="col-sm-4 mb-2">
                    @Html.DisplayNameFor(model => model.Trangthai)
                </dt>
                <dd class="col-sm-8 mb-2">
                    @if (Model.Trangthai == "Hoàn thành")
                    {
                        <span class="badge bg-success">@Model.Trangthai</span>
                    }
                    else if (Model.Trangthai == "Chưa xác nhận")
                    {
                        <span class="badge bg-warning text-dark">@Model.Trangthai</span>
                    }
                    else if (Model.Trangthai == "Đã hủy")
                    {
                        <span class="badge bg-danger">@Model.Trangthai</span>
                    }
                    else
                    {
                        <span class="badge bg-info">@Model.Trangthai</span>
                    }
                </dd>
                <dt class="col-sm-4 mb-2">
                    @Html.DisplayNameFor(model => model.TtThanhtoan)
                </dt>
                <dd class="col-sm-8 mb-2">
                    @if (Model.TtThanhtoan == "Đã thanh toán")
                    {
                        <span class="badge bg-success">@Model.TtThanhtoan</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@Model.TtThanhtoan</span>
                    }
                </dd>
            </dl>
        </div>
    </div>
    <div class="col-sm-6 border-1 rounded-1 shadow bg-light p-3">
        @if(shippers != null && shippers.Count > 0)
        {
            <form asp-action="banGiaoDDH" method="post">
                <div class="mb-3">
                    <label for="shipperSelect" class="form-label">Chọn nhân viên giao hàng:</label>
                    <select class="form-select" id="shipperSelect" name="Manv" onchange="loadShipper()" required>
                        <option value="" disabled selected>-- Chọn nhân viên --</option>
                        @foreach (var shipper in shippers)
                        {
                            <option value="@shipper.MaNv">@shipper.Tennv</option>
                        }
                    </select>
                </div>
                <input type="hidden" name="MaDdh" value="@Model.MaDdh" />
                <div id="shipper"></div>
                <div class="w-100 text-end"><button type="submit" class="btn btn-primary">Xác nhận giao hàng</button></div>
            </form>  
         }
    </div>
</div>
<script>
    function loadShipper() {
        let id =document.getElementById("shipperSelect").value;
        const shipperDiv = document.getElementById("shipper");
        const xhttp = new XMLHttpRequest();
        xhttp.onload = function() {
            shipperDiv.innerHTML = this.responseText;
        };
        xhttp.open("GET", "/Admin/DonDatHang/Shipper/" + id);
        xhttp.send();

    }
</script>
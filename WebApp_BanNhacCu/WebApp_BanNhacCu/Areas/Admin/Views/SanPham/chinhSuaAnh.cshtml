@model IEnumerable<WebApp_BanNhacCu.Areas.Admin.MyModels.CHinh>

@{
    ViewData["Title"] = "chinhSuaAnh";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@{
    SanPham sp = ViewBag.SP;
}
<h1 class="mt-5 text-center text-uppercase fw-bold">@(sp!=null?@sp.Tensp:"Hình Sản phẩm")</h1>
<div class="d-flex justify-content-center mb-5">
    <a class="btn btn-info " asp-area="Admin" asp-controller="SanPham" asp-action="chiTietSP" asp-route-id="@(sp != null ? @sp.Tensp : "SP01")">Quay lại</a>
</div>
@if (sp != null)
{
    <div class="mb-5">
        <form action="themAnh" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="form-group col-sm-4">
                    <input type="hidden" name="maSp" value="@sp.MaSp" />
                    <input type="file" name="filehinh" class="form-control" multiple />
                </div>
                <div class="form-group col-sm-1 d-flex justify-content-center align-items-center text-center">
                    <input type="submit" value="Thêm" class="btn btn-info" />
                </div>
                <div class="col-sm-7"></div>
            </div>
        </form>
    </div>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaHinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaSp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th>
                Hình Ảnh
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaHinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaSp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>

            </td>
            <td>
                <a class="btn btn-danger" asp-area="Admin" asp-controller="SanPham" asp-action="xoaAnh" asp-route-id="@item.MaHinh">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>

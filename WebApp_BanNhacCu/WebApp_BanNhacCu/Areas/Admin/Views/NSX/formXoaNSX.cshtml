@model WebApp_BanNhacCu.Models.NhaSanXuat

@{
    ViewData["Title"] = "formXoaNSX";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<h1 class="text-center fw-bold mt-5 mb-5">Xóa Nhà Sản Xuất</h1>
<div class="d-flex flex-row justify-content-between">
    <h3 class="mb-1">Bạn có chắc muốn xóa nhà sản xuất này?</h3>
    <a class="btn btn-outline-info" asp-action="Index">Quay lại</a>
</div>
<div>
    <hr />
    <dl class="row">
        <div class="col-sm-1"></div>
        <div class="row col-sm-11">
            <dt class = "col-sm-2">
			    Mã nhà sản xuất
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.MaNsx)
            </dd>
            <dt class = "col-sm-2">
			    Tên nha sản xuất    
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Tennsx)
            </dd>
            <dt class = "col-sm-2">
                Địa chỉ
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Diachi)
            </dd>
            <dt class = "col-sm-2">
			    Số điện thoại
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Sdt)
            </dd>
            <dt class = "col-sm-2">
                Email
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dd class="col-sm-10 d-flex pe-0">
                <form asp-action="xoaNSX" method="post" asp-route-id="@Model.MaNsx">
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                </form>
            </dd>
		</div>
    </dl>
</div>

@model WebApp_BanNhacCu.Models.LoaiSanPham

@{
    ViewData["Title"] = "formXoaLoai";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<h1 class="text-center fw-bold mt-5 mb-5">Xóa Loại</h1>
<div class="d-flex flex-row justify-content-between">
    <h3 class="mb-1">Bạn có chắc muốn xóa loại này?</h3>
    <a class="btn btn-outline-info" asp-action="Index">Quay lại</a>
</div>
<div>
    <hr />
    <dl class="row">
        <div class="col-sm-1"></div>
        <div class="row col-sm-11">
            <dt class = "col-sm-2">
                Mã Loai 
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.MaLoai)
            </dd>
            <dt class = "col-sm-2">
                Tên Loại
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Tenloai)
            </dd>
            <dt class = "col-sm-2">
                Mô tả
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Mota)
            </dd>
            <dd class="col-sm-10 d-flex pe-0">
                <form asp-action="xoaLoai" method="post" asp-route-id="@Model.MaLoai">
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                </form>
            </dd>
        </div>
    </dl>
</div>

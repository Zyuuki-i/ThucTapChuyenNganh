@model WebApp_BanNhacCu.Areas.Admin.MyModels.CNguoiDung

@{
    ViewData["Title"] = "formSuaTK";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-center fw-bold mt-5 mb-5">Sửa Thông Tin Tài Khoản</h1>
<div class="row" justify-content-center>
    <div class="col-md-4">
        <form asp-action="suaTK" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaNd" class="control-label"></label>
                <input asp-for="MaNd" class="form-control" readonly />
                <span asp-validation-for="MaNd" class="text-danger"></span>
                <span asp-validation-for="MaNd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sdt" class="control-label"></label>
                <input asp-for="Sdt" class="form-control" />
                <span asp-validation-for="Sdt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Matkhau" class="control-label"></label>
                <input asp-for="Matkhau" class="form-control" />
                <span asp-validation-for="Matkhau" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaVt" class="control-label"></label>
                <select asp-for="MaVt" class="form-control" asp-items="@ViewBag.DSVaitro">
                    <option value="">-- Chọn vai trò --</option>
                </select>
                <span asp-validation-for="MaVt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hinhanh" class="control-label"></label>
                <input asp-for="Hinhanh" class="form-control" />
                <span asp-validation-for="Hinhanh" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-end mt-2">
                <a class="btn btn-outline-info me-3 " asp-action="Index">Quay lại</a>
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

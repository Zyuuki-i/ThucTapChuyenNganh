@model IEnumerable<WebApp_BanNhacCu.Models.GiaoHang>

@{
    ViewData["Title"] = "Đơn hoàm thành";
    Layout = "~/Areas/Carrier/Views/Shared/_CarrierLayout.cshtml";
}
<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center my-4">
        <h2 class="mt-4">📦 Quản lý Giao Hàng</h2>
    </div>

    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-white py-3">
            <h6 class="m-0 font-weight-bold text-warning">Danh sách hoàn thành</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-bordered align-middle" id="dataTable" width="100%" cellspacing="0">
                    <thead class="table-light text-center">
                        <tr>
                            <th>Mã giao</th>
                            <th>Mã đơn hàng</th>
                            <th>Nhân viên</th>
                            <th>Ngày bắt đầu</th>
                            <th>Ngày kết thúc</th>
                            <th>Tổng thu</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center fw-bold text-secondary">
                                    #@Html.DisplayFor(modelItem => item.MaGh)
                                </td>
                                <td class="text-center fw-bold text-secondary">
                                    #@Html.DisplayFor(modelItem => item.MaDdh)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.MaNvNavigation.Tennv)
                                </td>
                                <td class="text-center">
                                    @string.Format("{0:dd/MM/yyyy}", item.Ngaybd)
                                </td>
                                <td class="text-center">
                                    @string.Format("{0:dd/MM/yyyy}", item.Ngaykt)
                                </td>
                                <td class="text-end fw-bold text-danger">
                                    @string.Format("{0:N0} đ", item.Tongthu)
                                </td>
                                <td class="text-center">
                                    <span class="badge rounded-pill bg-danger">
                                        @item.Trangthai
                                    </span>
                                </td>
                                <td class="text-center">
                                    <a class="btn btn-sm btn-outline-info"
                                       asp-action="chiTietDH"
                                       asp-route-id="@item.MaDdh"
                                       title="Xem chi tiết đơn hàng">
                                        <i class="fas fa-eye"></i> Chi tiết
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
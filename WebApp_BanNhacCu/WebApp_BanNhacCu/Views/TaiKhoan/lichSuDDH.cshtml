@model IEnumerable<WebApp_BanNhacCu.Areas.Admin.MyModels.CDonDatHang>

@{
    ViewData["Title"] = "Lịch sử đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold mb-1"><i class="bi bi-clock-history text-warning me-2"></i>Lịch sử mua hàng</h3>
            <p class="text-muted mb-0">Theo dõi trạng thái các đơn hàng của bạn</p>
        </div>
        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary rounded-pill">
            <i class="bi bi-arrow-left me-1"></i> Quay về trang chủ
        </a>
    </div>

    @if (TempData["MessageError_ThanhToan"] != null)
    {
        <div class="alert alert-danger shadow-sm d-flex align-items-center mb-4">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["MessageError_ThanhToan"]
        </div>
    }
    @if (TempData["MessageSuccess_ThanhToan"] != null)
    {
        <div class="alert alert-success shadow-sm d-flex align-items-center mb-4">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["MessageSuccess_ThanhToan"]
        </div>
    }

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-clipboard-x text-muted" style="font-size: 4rem;"></i>
                <h4 class="mt-3 fw-bold text-muted">Bạn chưa có đơn hàng nào</h4>
                <p class="text-secondary">Hãy khám phá các nhạc cụ tuyệt vời của chúng tôi nhé!</p>
                <a asp-controller="SanPham" asp-action="Index" class="btn btn-warning text-white rounded-pill px-4 mt-2">
                    Mua sắm ngay
                </a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover table-order mb-0">
                    <thead>
                        <tr>
                            <th>Mã đơn</th>
                            <th>Ngày đặt</th>
                            <th>Địa chỉ nhận hàng</th>
                            <th>Tổng tiền</th>
                            <th class="text-center">Trạng thái</th>
                            <th class="text-center">Thanh toán</th>
                            <th class="text-end">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <span class="order-id">#@item.MaDdh</span>
                                </td>

                                <td>
                                    @if(item.Ngaydat.HasValue)
                                    {
                                         @item.Ngaydat.Value.ToString("dd/MM/yyyy") <br/>
                                         <small class="text-muted">@item.Ngaydat.Value.ToString("HH:mm")</small>
                                    }
                                </td>

                                <td style="max-width: 250px;">
                                    <div class="text-truncate" title="@(item.Diachi + ", "+ item.Phuongxa + ", "+ item.Tinhthanh)">
                                        <i class="bi bi-geo-alt text-secondary me-1"></i>
                                        @(item.Diachi + ", "+ item.Phuongxa + ", "+ item.Tinhthanh)
                                    </div>
                                </td>

                                <td>
                                    <span class="fw-bold text-danger">@String.Format("{0:N0} đ", item.Tongtien)</span>
                                </td>

                                <td class="text-center">
                                    @if (item.Trangthai == "Đang xử lý")
                                    {
                                        <span class="badge badge-soft-info px-3 py-2 rounded-pill">Đang xử lý</span>
                                    }
                                    else if (item.Trangthai == "Đã hủy")
                                    {
                                        <span class="badge badge-soft-danger px-3 py-2 rounded-pill">Đã hủy</span>
                                    }
                                    else if (item.Trangthai == "Hoàn thành" || item.Trangthai == "Đã giao")
                                    {
                                        <span class="badge badge-soft-success px-3 py-2 rounded-pill">Hoàn thành</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-soft-warning px-3 py-2 rounded-pill">@item.Trangthai</span>
                                    }
                                </td>

                                <td class="text-center">
                                    @if (item.TtThanhtoan == "Đã thanh toán")
                                    {
                                        <span class="text-success small fw-bold"><i class="bi bi-check-all"></i> Đã thanh toán</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted small"><i class="bi bi-hourglass-split"></i> Chưa thanh toán</span>
                                    }
                                </td>

                                <td class="text-end">
                                    <div class="btn-group">
                                        <a asp-controller="DonDatHang" asp-action="xemDDH" asp-route-id="@item.MaDdh" 
                                           class="btn btn-sm btn-outline-primary" title="Xem chi tiết">
                                            <i class="bi bi-eye"></i>
                                        </a>

                                        @if (item.Trangthai == "Đang xử lý" && item.TtThanhtoan == "Chưa thanh toán")
                                        {
                                            <a asp-controller="DonDatHang" asp-action="huyDDH" asp-route-id="@item.MaDdh" 
                                               class="btn btn-sm btn-outline-danger ms-1" 
                                               onclick="return confirm('Bạn có chắc chắn muốn hủy đơn hàng này?');" 
                                               title="Hủy đơn hàng">
                                                <i class="bi bi-x-lg"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const alertBox = document.querySelector(".alert");
        if (alertBox) {
            setTimeout(() => alertBox.style.display = "none", 3000);
        }
    });
</script>
@model WebApp_BanNhacCu.Models.NguoiDung

@{
    ViewData["Title"] = "Xem Tài Khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5 mb-5" style="max-width: 900px;">

    <div class="card profile-card">
        <div class="profile-header d-flex justify-content-between align-items-center">
            <h4 class="mb-0 fw-bold"><i class="bi bi-person-vcard me-2"></i> HỒ SƠ CÁ NHÂN</h4>
            <span class="text-white-50 small">Quản lý thông tin bảo mật</span>
        </div>

        <div class="card-body p-4 p-md-5">
            <div class="row align-items-start">

                <div class="col-md-8 order-2 order-md-1">
                    <div class="row g-3">
                        <div class="col-12">
                            <label class="profile-label"><i class="bi bi-person-fill text-warning me-1"></i> Họ và Tên</label>
                            <input type="text" class="form-control form-control-view rounded-3" value="@Model.Tennd" readonly>
                        </div>

                        <div class="col-md-6">
                            <label class="profile-label"><i class="bi bi-envelope-fill text-warning me-1"></i> Email</label>
                            <input type="text" class="form-control form-control-view rounded-3" value="@Model.Email" readonly>
                        </div>

                        <div class="col-md-6">
                            <label class="profile-label"><i class="bi bi-telephone-fill text-warning me-1"></i> Số điện thoại</label>
                            <input type="text" class="form-control form-control-view rounded-3" value="@Model.Sdt" readonly>
                        </div>

                        <div class="col-12">
                            <label class="profile-label"><i class="bi bi-geo-alt-fill text-warning me-1"></i> Địa chỉ</label>
                            <textarea class="form-control form-control-view rounded-3" rows="2" readonly>@(Model.Diachi + ", "+Model.Phuongxa +", " + Model.Tinhthanh)</textarea>
                        </div>
                    </div>

                    <div class="mt-4">
                        <a asp-controller="TaiKhoan" asp-action="formCapNhatTK" asp-route-id="@Model.MaNd" class="btn btn-update-profile rounded-pill">
                            <i class="bi bi-pencil-square me-2"></i> Cập nhật thông tin
                        </a>
                    </div>
                </div>

                <div class="col-md-4 order-1 order-md-2 text-center mb-4 mb-md-0 border-start-md">
                    <div class="d-flex flex-column align-items-center justify-content-center h-100">
                        <div class="avatar-wrapper mb-3">
                            @{
                                string avatarUrl = "https://cdn-icons-png.flaticon.com/512/149/149071.png"; 
                            }
                            <img src="@Url.Content(avatarUrl)" class="profile-avatar-lg" alt="Avatar">
                        </div>

                        <h5 class="fw-bold text-dark">@Model.Tennd</h5>
                        <p class="text-muted small">Thành viên Zyuuki Music</p>

                        <div class="alert alert-light border border-dashed text-muted small mt-2 p-2 w-75 mx-auto">
                            <i class="bi bi-info-circle me-1"></i> Để thay đổi ảnh đại diện, vui lòng nhấn nút <strong>Cập nhật</strong> bên dưới.
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<style>

    @@media (min-width: 768px) {
        .border-start-md {
            border-left: 1px solid #eee;
        }
    }
</style>

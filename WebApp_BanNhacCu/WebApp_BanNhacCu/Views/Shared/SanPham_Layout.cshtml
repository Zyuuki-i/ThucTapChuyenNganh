@model IEnumerable<WebApp_BanNhacCu.Models.SanPham>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container py-4 mb-5">
    <div class="row g-4">
        <div class="col-lg-3">
            <div class="sidebar-wrapper shadow-sm rounded-3 p-4 sticky-top" style="top: 90px; z-index: 1;">

                <div class="mb-4 text-center">
                    <a asp-controller="SanPham" asp-action="Index" class="text-decoration-none">
                        <h4 class="fw-bold text-dark border-bottom pb-2 mb-0 hover-gold">
                            <i class="bi bi-grid-fill me-2 text-warning"></i> DANH MỤC
                        </h4>
                        <small class="text-muted">Tất cả sản phẩm</small>
                    </a>
                </div>

                <div class="mb-4">
                    <h5 class="sidebar-title">Loại Sản Phẩm</h5>
                    @if (ViewBag.DsLoai != null)
                    {
                        <ul class="nav flex-column">
                            @foreach (LoaiSanPham loai in ViewBag.DsLoai)
                            {
                                <li class="nav-item">
                                    <a class="nav-link sidebar-link" asp-controller="SanPham" asp-action="locLoai" asp-route-maloai="@loai.MaLoai.Trim()">
                                        <i class="bi bi-music-note-beamed"></i>
                                        @loai.Tenloai
                                    </a>
                                </li>
                            }
                        </ul>
                    }
                </div>

                <div>
                    <h5 class="sidebar-title">Nhà Sản Xuất</h5>
                    @if (ViewBag.DsNSX != null)
                    {
                        <ul class="nav flex-column">
                            @foreach (NhaSanXuat nsx in ViewBag.DsNSX)
                            {
                                <li class="nav-item">
                                    <a class="nav-link sidebar-link" asp-controller="SanPham" asp-action="locNSX" asp-route-mansx="@nsx.MaNsx.Trim()">
                                        <i class="bi bi-buildings"></i>
                                        @nsx.Tennsx
                                    </a>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-9">
            <main role="main" class="bg-white p-3 rounded-3" style="min-height: 500px;">
                @RenderBody()
            </main>
        </div>
    </div>
</div>

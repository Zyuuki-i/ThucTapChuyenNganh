@{
}
<div class="container-fluid vh-100">
    <div class="row h-100">
        <div class="col-md-7 d-flex align-items-center justify-content-center">
            <div class="text-center">
                <h1 class="fw-bold text-primary">Zyuuki Music Store</h1>
                <p class="text-secondary fs-5">Âm nhạc kết nối cảm xúc</p>
            </div>
        </div>
        <div class="col-md-5 d-flex align-items-center justify-content-center">
            <div class="card shadow-sm w-75">
                <div class="card-header bg-white border-0">
                    <ul class="nav nav-tabs justify-content-center" id="myTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="login-tab" data-bs-toggle="tab"
                                    data-bs-target="#login" type="button" role="tab">
                                Đăng nhập
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="register-tab" data-bs-toggle="tab"
                                    data-bs-target="#register" type="button" role="tab">
                                Đăng ký
                            </button>
                        </li>
                    </ul>
                </div>

                <div class="card-body tab-content" id="myTabContent">

                    <!-- Form Đăng nhập -->
                    <div class="tab-pane fade show active" id="login" role="tabpanel">
                        <form asp-action="DangNhap" method="post">
                            <div class="mb-3">
                                <label class="form-label">Email</label>
                                <input name="email" type="email" class="form-control" required />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Mật khẩu</label>
                                <input name="matkhau" type="password" class="form-control" required />
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
                        </form>

                        @if (TempData["ErrorLogin"] != null)
                        {
                            <div class="alert alert-danger mt-3">@TempData["ErrorLogin"]</div>
                        }
                        @if (TempData["SuccessLogin"] != null)
                        {
                            <div class="alert alert-success mt-3">@TempData["SuccessLogin"]</div>
                        }
                    </div>

                    <!-- Form Đăng ký -->
                    <div class="tab-pane fade" id="register" role="tabpanel">
                        <form asp-action="DangKy" method="post">
                            <div class="mb-3">
                                <label class="form-label">Họ và tên</label>
                                <input name="Hoten" class="form-control" required />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Số điện thoại</label>
                                <input name="sdt" class="form-control" required />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Email</label>
                                <input name="Email" type="email" class="form-control" required />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Mật khẩu</label>
                                <input name="Matkhau" type="password" class="form-control" required />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Nhập lại mật khẩu</label>
                                <input name="XacnhanMatkhau" type="password" class="form-control" required />
                            </div>
                            <button type="submit" class="btn btn-success w-100">Đăng ký</button>
                        </form>

                        @if (TempData["ErrorRegister"] != null)
                        {
                            <div class="alert alert-danger mt-3">@TempData["ErrorRegister"]</div>
                        }
                        @if (TempData["SuccessRegister"] != null)
                        {
                            <div class="alert alert-success mt-3">@TempData["SuccessRegister"]</div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </div>
</div>


  


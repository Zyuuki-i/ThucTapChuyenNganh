@model IEnumerable<WebApp_BanNhacCu.Models.SanPham>

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/SanPham_Layout.cshtml";
}
@if (TempData["MessageSuccess_GioHang"] != null)
{
    <div class="alert alert-success text-center fw-bold">
        @TempData["MessageSuccess_GioHang"]
    </div>
}
@if (TempData["MessageError_GioHang"] != null)
{
    <div class="alert alert-danger text-center fw-bold">
        @TempData["MessageError_GioHang"]
    </div>
}
@if (Model == null || !Model.Any())
{
    <h3 class="text-center text-danger fw-bold mt-5">Không có sản phẩm phù hợp!</h3>
}
else
{
    SanPham sp = Model.First();
    <div class="row g-4 align-items-start mt-5">
        <div class="col-md-6 mt-0">
            @{
                List<Hinh> dsHinh = ViewBag.HinhChinh;
                if (dsHinh != null && dsHinh.Count > 0)
                {
                    string url = "~/images/anhsp/" + sp.MaSp.Trim() + "/" + dsHinh[0].Tenhinh;
                    <div class="position-relative w-75 m-auto text-center" style="height:325px">
                        <img id="anhChinh" src="@Url.Content(url)" class="img-fluid h-100" alt="@sp.Tensp" style="object-fit:contain">
                    </div>
                    bool flag = true;
                    <div class="d-flex overflow-auto gap-2 mt-3" style="height: 100px;">
                        @foreach (Hinh hinh in dsHinh)
                        {
                            url = "~/images/anhsp/" + sp.MaSp.Trim() + "/" + hinh.Tenhinh;
                            if (flag)
                            {
                                flag = false;
                                <img class="anhPhu border thumb-active" src="@Url.Content(url)" width="100" alt="@sp.Tensp">
                            }
                            else
                            {
                                <img class="anhPhu border" src="@Url.Content(url)" width="100"alt="@sp.Tensp">
                            }
                        }
                        <style>
                            .anhPhu:hover{
                                opacity:0.6;
                            }
                        </style>
                        <script>
                               document.addEventListener("DOMContentLoaded", function () {
                                const chonAnh = document.querySelectorAll(".anhPhu");
                                const anhChinh = document.querySelector("#anhChinh");

                                chonAnh.forEach(function (img) {
                                    img.addEventListener("click", function () {
      
                                        anhChinh.src = this.src;

                                        document.querySelectorAll(".anhPhu").forEach(i => i.classList.remove("thumb-active"));
                                        this.classList.add("thumb-active");
                                    });
                                });
                            });
                        </script>
                    </div>
                }
                else
                {
                    <div class="position-relative">
                        <img src="~/images/anhsp/default.png" class="img-fluid rounded shadow-sm" alt="@sp.Tensp">
                    </div>
                }
            }
        </div>

        <div class="col-md-6">
            <h3 class="fw-bold mb-2">@sp.Tensp</h3>

            <div class="text-warning mb-2">
                @{
                    List<DanhGia> dsdg = ViewBag.DanhGia;
                    if(dsdg != null && dsdg.Count > 0)
                    {
                        double tongdiem = 0;
                        foreach(DanhGia dg in dsdg)
                        {
                            if (dg.Sosao.HasValue)
                            {
                                tongdiem += (double)dg.Sosao.Value;
                            }
                        }
                        double diemTB = tongdiem / dsdg.Count;
                        int sao = (int)Math.Round(diemTB);
                        for(int i = 1; i <= sao; i++)
                        {
                            <span>★</span>
                        }
                        for(int i = sao + 1; i <= 5; i++)
                        {
                            <span>☆</span>
                        }
                        <span class="text-muted small">@dsdg.Count() đánh giá</span>
                    }
                    else
                    {
                        <span class= "text-muted small" >☆☆☆☆☆ 0 đánh giá</span>
                    }
                }
            </div>

            <p class="text-muted mb-1">
                @{
                    List<NhaSanXuat> dsnx = ViewBag.DsNSX;
                    foreach (var nx in dsnx)
                    {
                        if (nx.MaNsx == sp.MaNsx)
                        {
                            @:Thương hiệu: <strong>@nx.Tennsx</strong> |
                            break;
                        }
                    }
                    if(sp.Soluongton > 0)
                    {
                        @:Tình trạng: <span class="text-success">Còn hàng</span>
                    }
                    else
                    {
                        @:Tình trạng: <span class="text-danger">Hết hàng</span>
                    }
                }
            </p>

            <div class="mb-3">
                <span class="text-danger fs-3 fw-bold me-2">@String.Format("{0:N0} đ",sp.Giasp)</span>
                <span class="text-muted text-decoration-line-through">@String.Format("{0:N0} đ", (sp.Giasp + sp.Giasp * 18 / 100))</span>
            </div>

            <div class="d-flex align-items-center mb-4">
                <button class="btn-giam btn btn-outline-secondary">-</button>
                <input type="text" class="soluong form-control text-center mx-2" value="1" style="width: 60px;">
                <button class="btn-tang btn btn-outline-secondary">+</button>
            </div>

            <script>
                document.addEventListener("DOMContentLoaded", function () {
                    const giam = document.querySelector(".btn-giam");
                    const tang = document.querySelector(".btn-tang");
                    const input = document.querySelector(".soluong");
                    const slMua = document.getElementById("slMuaNgay");
                    const slGio = document.getElementById("slThemVaoGio");

                    function capNhat(gtri) {
                        input.value = gtri;
                        slMua.value = gtri;
                        slGio.value = gtri;
                    }

                    giam.addEventListener("click", function () {
                        let y = parseInt(input.value) || 1;
                        if (y > 1) capNhat(y - 1);
                    });

                    tang.addEventListener("click", function () {
                        let x = parseInt(input.value) || 1;
                        capNhat(x + 1);
                    });

                    input.addEventListener("input", function () {
                        let gtri = parseInt(input.value) || 1;
                        if (gtri < 1) gtri = 1;
                        capNhat(gtri);
                    });
                });
            </script>

            <div class="d-flex gap-3">
                <form asp-controller="DonDatHang" asp-action="muaNgay" asp-route-id="@sp.MaSp" method="post" class="flex-fill">
                    <input type="hidden" name="soluong" id="slMuaNgay" value="1" />
                    <button type="submit" class="btn btn-outline-warning btn-lg fw-bold w-100 d-flex flex-column align-items-center justify-content-center text-center" style="height:80px">
                        <div><i class="bi bi-credit-card-2-back-fill"></i> MUA NGAY </div>
                        <h6>Miễn phí vận chuyển</h6>
                    </button>
                </form>
                <form asp-controller="DonDatHang" asp-action="themVaoGio" asp-route-id="@sp.MaSp" method="post" class="flex-fill">
                    <input type="hidden" name="soluong" id="slThemVaoGio" value="1" />
                    <button type="submit" class="btn btn-outline-success btn-lg fw-bold w-100 d-flex flex-column align-items-center justify-content-center text-center" style="height:80px">
                        <div><i class="bi bi-cart accept-policy-icon"></i> THÊM VÀO GIỎ </div>
                        <h6>Thêm ngay vào giỏ hàng</h6>
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-12 mt-5">
        <h4 class="fw-bold">Đánh giá</h4>
        <div class="border rounded-1s">
        @if (dsdg == null || dsdg.Count <= 0)
        {
            <h5 class="text-center text-muted">Chưa có đánh giá nào cho sản phẩm này.</h5>
        }
        else
        {
            List<NguoiDung> dskh = ViewBag.KhachHangDanhGia;
            foreach (var dg in dsdg)
            {
                <div class="ms-1 mb-1 p-1">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        @foreach (var kh in dskh)
                        {
                            if (kh.MaNd == dg.MaNd)
                            {
                                <div class="d-flex flex-row justify-content-center align-items-center text-center">
                                    @{
                                        string url = "~/images/anhdaidien/";
                                        <div class="d-flex align-items-center">
                                            <img src="@Url.Content(url)" alt="Avatar" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                        </div>
                                      }
                                    <strong>@kh.Tennd : &nbsp; </strong> 
                                    <span class="text-secondary fs-6">@dg.Noidung</span>
                                </div>
                            }
                        }
                        <span class="text-warning">
                            @{
                                int soSao = dg.Sosao ?? 0;
                                for (int i = 1; i <= soSao; i++)
                                {
                                    <span>★</span>
                                }
                                for (int i = soSao + 1; i <= 5; i++)
                                {
                                    <span>☆</span>
                                }
                            }
                        </span>
                    </div>
                </div>
            }
        }
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <h4 class="fw-bold mb-3">Sản phẩm tương tự</h4>
            <div class="d-flex gap-3 overflow-auto pb-3">
                @foreach (var item in Model)
                {
                    string tenfile = "";
                    List<Hinh> dshinh = ViewBag.DsHinh;
                    @foreach (Hinh hinh in dshinh)
                    {
                        if (hinh.MaSp == item.MaSp)
                        {
                            tenfile = hinh.Tenhinh;
                            break;
                        }
                    }
                    string url = "";
                    if (tenfile == "")
                    {
                        url = "~/images/anhsp/default.png";
                    }
                    else
                    {
                        url = "~/images/anhsp/" + item.MaSp.Trim() + "/" + tenfile;
                    }
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <div class="col h-100">
                                <div class="card">
                                    <a asp-controller="SanPham" asp-action="chiTiet" asp-route-id="@item.MaSp">
                                        <div class="d-flex align-content-center mt-3" style="height: 100px">
                                            <img src="@Url.Content(url)" class="card-img-top" alt="Hình Sản Phẩm" style="object-fit:contain;">
                                        </div>
                                    </a>
                                    <div class="card-body">
                                        <h5 class="card-title fw-bold" style="height: 30px">@item.Tensp </h5>
                                        <h6 class="card-text text-danger text-center mb-1" style="height: 20px">@String.Format("{0:N0} đ", item.Giasp)</h6>
                                        <div class="d-flex w-100 justify-content-end"><a asp-controller="DonDatHang" asp-action="themVaoGio" asp-route-id="@item.MaSp" class="btn btn-warning w-100 mt-2 fs-6">Mua ngay</a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div> 
    </div>
}
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const alertBox = document.querySelector(".alert");
        if (alertBox) {
            setTimeout(() => alertBox.style.display = "none", 3000);
        }
    });
</script>